<html>
 <body>

  <p id="notice"></p>
  <div class="flash">
  <%= flash[:notice] %>
  </div>
   <h1>Books</h1>

 <table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
   </tr>
   </thead>


    <% @books.each do |book| %>
    <tbody>
     <tr>
      <td><%=book.title%></td>
      <td><%=book.body%></td>
      <td><%=link_to"Show",book_path(book.id) %></td>
      <td><%=link_to"Edit",edit_book_path(book.id) %></td>
      <td><%=link_to"Destroy", book_path(book.id),method: :delete,data:{ confirm: "Are you sure?" }%></td>

     </tr>
    </tbody>

    <% end %>
 </table>

   <h2>New book</h2>
   <% if @book.errors.any? %>
   <div class="error2">
    <div class="error-title">
     <h3><%= @book.errors.count %>errors prohibited this book from being saved:</h3>
    </div>
     <ul><% @book.errors.full_messages.each do |message| %>

      <li><%= message %></li>
    <% end %>
      </ul>

   </div>
   <% end %>


  <%= form_with model:@book,local:true do |f| %>
  <div class="field">
    <%= f.label :Title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :Body %>
    <%= f.text_area :body %>
  </div>
  <p><%= f.submit 'Create Book' %></p>
  <% end %>
 </body>
</html>